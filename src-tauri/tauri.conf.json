{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "artisan",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$RESOURCE/*", "$DOCUMENT/*", "$HOME/*"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": "(^https?://)|(^/)",
        "scope": [{
          "name": "run-osascript",
          "cmd": "osascript",
          "args": true
        },
        {
          "name": "start-local-server",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "kill-process",
          "cmd": "kill",
          "args": true
        }
      ]
      },
      "fs": {
        "writeFile": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "readFile": true,
        "scope": ["$RESOURCE/**", "$DOCUMENT/**", "$HOME", "$HOME/*", "$HOME/**", "$HOME/**/**" ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.politico.artisan",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/ai2html.js",
        "resources/ai2html-config.json",
        "resources/exportArtboards.js"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false,
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "",
        "theme": "Light",
        "width": 780
      }
    ]
  }
}